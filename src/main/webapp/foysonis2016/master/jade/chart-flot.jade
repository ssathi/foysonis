extends layout/main-layout

block active-item
  - firstMenu['Administration']['active'] = 1
  - firstMenu['Administration']['S']['Animations']['active'] = 1

block content
  

  h3 
    .pull-right.text-center
      .inlinesparkline.inline(data-bar-color="#cfdbe2", data-height="20", data-bar-width="3", data-bar-spacing="2") 
        | 1,0,4,9,5,7,8,9,5,7,8,4,7
    | Flot charts

  // START row
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading
          a(href="#", data-perform="panel-dismiss", data-toggle="tooltip", title="Close Panel").pull-right
            em.fa.fa-times
          a(href="#", data-perform="panel-collapse", data-toggle="tooltip", title="Collapse Panel").pull-right
            em.fa.fa-minus
          a(href="#", data-perform="panel-refresh", data-spinner="traditional", data-toggle="tooltip", title="Refresh Panel").pull-right
            em.fa.fa-refresh
          .panel-title Area
        .panel-collapse
          .panel-body
            .chart-area.flot-chart(data-source="server/chart-data.php?type=area")
  // END row
